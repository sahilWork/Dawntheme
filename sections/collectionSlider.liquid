<div class="collectionSection">
  <h1 class="collectionTitle">{{ section.settings.sectionTitle }}</h1>
  <div class="collectionList">
    {% assign col = collections[section.settings.collection].products %}
    {% for colPro in col %}
      <div class="collection-product">
        <div class="collection-image">
          <img src="{{ colPro.images[0] | img_url: '300X300'}}" />
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Collection Slider",
    "settings": [
      {
        "type": "text",
        "id": "sectionTitle",
        "label": "Title"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ]
  }
{% endschema %}